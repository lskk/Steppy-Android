<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#2c3e50"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#2c3e50" 
	    android:paddingBottom="5dp"
	    >	
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:background="#00a65a"
	        android:gravity="center"
	        android:paddingBottom="15dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="15dp" >

			<TextView
			    android:layout_marginRight="5dp"
			    android:id="@+id/level"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Level : "
			    android:textColor="#ffffff"
			    android:textStyle="bold"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView
			    android:layout_marginRight="5dp"
			    android:id="@+id/point"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text=" | Point : "
			    android:textColor="#ffffff"
			    android:textStyle="bold"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
			
	        <ImageView
	            android:id="@+id/iconmission1"
	            android:layout_margin="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        
	        
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginBottom="5dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:orientation="vertical"
			    android:paddingBottom="15dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="15dp" >

			    <TextView
				    android:id="@+id/valueMission1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:gravity="left"
				    android:text="100"
				    android:textStyle="bold"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#ffffff" />
			    
			    
				<TextView
				    android:layout_marginRight="5dp"
				    android:id="@+id/nameMission1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Steps in 2 hours"
				    android:textColor="#ffffff"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
	
				<TextView
				    android:layout_marginTop="2dp"
				    android:padding="6dp"
				    android:background="#00a65a"
				    android:textStyle="bold"
				    android:textColor="#ffffff"
				    android:id="@+id/stateMission1"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Not Complete"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
		</LinearLayout>
		
		
		
		
		
		
		
		
		
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
			
	        <ImageView
	            android:id="@+id/iconmission2"
	            android:layout_margin="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        
	        
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginBottom="5dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:orientation="vertical"
			    android:paddingBottom="15dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="15dp" >

			    <TextView
				    android:id="@+id/valueMission2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:gravity="left"
				    android:text="100"
				    android:textStyle="bold"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#ffffff" />
			    
			    
				<TextView
				    android:layout_marginRight="5dp"
				    android:id="@+id/nameMission2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Meter in 2 hours"
				    android:textColor="#ffffff"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
	
				<TextView
				    android:layout_marginTop="2dp"
				    android:padding="6dp"
				    android:background="#00a65a"
				    android:textStyle="bold"
				    android:textColor="#ffffff"
				    android:id="@+id/stateMission2"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Not Complete"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
		</LinearLayout>
		
		
		
		
		
		
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
			
	        <ImageView
	            android:id="@+id/iconmission3"
	            android:layout_margin="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        
	        
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginBottom="5dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:orientation="vertical"
			    android:paddingBottom="15dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="15dp" >

			    <TextView
				    android:id="@+id/valueMission3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:gravity="left"
				    android:text="100"
				    android:textStyle="bold"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#ffffff" />
			    
			    
				<TextView
				    android:layout_marginRight="5dp"
				    android:id="@+id/nameMission3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Steps in a day "
				    android:textColor="#ffffff"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
	
				<TextView
				    android:layout_marginTop="2dp"
				    android:padding="6dp"
				    android:background="#00a65a"
				    android:textStyle="bold"
				    android:textColor="#ffffff"
				    android:id="@+id/stateMission3"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Not Complete"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
		</LinearLayout>
		
		
		
		
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
			
	        <ImageView
	            android:id="@+id/iconmission4"
	            android:layout_margin="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        
	        
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginBottom="5dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:orientation="vertical"
			    android:paddingBottom="15dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="15dp" >

			    <TextView
				    android:id="@+id/valueMission4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:gravity="left"
				    android:text="100"
				    android:textStyle="bold"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#ffffff" />
			    
			    
				<TextView
				    android:layout_marginRight="5dp"
				    android:id="@+id/nameMission4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Meter in a day "
				    android:textColor="#ffffff"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
	
				<TextView
				    android:layout_marginTop="2dp"
				    android:padding="6dp"
				    android:background="#00a65a"
				    android:textStyle="bold"
				    android:textColor="#ffffff"
				    android:id="@+id/stateMission4"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:text="Not Complete"
				    android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
		</LinearLayout>
		
		
	</LinearLayout>
</ScrollView>