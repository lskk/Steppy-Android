<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#00a65a" >
	<ScrollView 
		    android:id="@+id/ScrollView01"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:background="#2c3e50"
		    >
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#00a65a"
		    >
		
		    <RelativeLayout
		        android:id="@+id/dashboard_header"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:background="#fff"
		        android:paddingBottom="10dip"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		        android:paddingRight="@dimen/activity_horizontal_margin"
		        android:paddingTop="10dip" >
		
		        <org.lskk.shesop.steppy.utils.RoundedImageView
		            android:id="@+id/dashboard_profpict"
		            android:layout_width="@dimen/dashboard_profpict_width"
		            android:layout_height="@dimen/dashboard_profpict_height"
		            android:layout_marginRight="8dip"
		            android:contentDescription="@string/app_name"
		            android:src="@drawable/profpict_blank" />
		
		        <LinearLayout
		            android:id="@+id/profil_sum_layout"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_gravity="center_vertical"
		            android:layout_alignTop="@+id/dashboard_profpict"
		            android:layout_toRightOf="@+id/dashboard_profpict"
		            android:layout_marginTop="15dp"
		            android:orientation="vertical" >
		
		            <TextView
		                android:id="@+id/dashboard_name"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="User Name"
		                android:paddingLeft="10dip"
		                android:paddingRight="10dip"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip"
		                android:background="@drawable/text_default_normal"
		                android:textColor="#fff"
		                android:textStyle="bold"
		                android:textAppearance="?android:attr/textAppearanceMedium" />
		
		            <TextView
		                android:id="@+id/text_age"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#00a65a"
		                android:text="23 Years" />
		
		            <LinearLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content" >
		
		                <TextView
		                    android:id="@+id/text_height"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textColor="#00a65a"
		                    android:text="176 cm" />
		
		                <TextView
		                    android:id="@+id/text_weight"
		                    android:paddingLeft="3dp"
		                    android:layout_width="90dp"
		                    android:textColor="#00a65a"
		                    android:layout_height="wrap_content"
		                    android:text="58 Kg" />
		
		            </LinearLayout>
		
		            <TextView
		                android:id="@+id/text_state"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Too Small Weight" 
		                android:textColor="#00a65a"
		                android:textStyle="bold"
		                />
		            <TextView
		                android:id="@+id/test_array"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="" 
		                android:textColor="#d04545"
		                android:textStyle="bold"
		                />
		
		        </LinearLayout>
		
		    </RelativeLayout>
		    <LinearLayout
		        android:id="@+id/dashboard_rl1"
		        android:background="#2c3e50"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_below="@id/dashboard_header"
		        android:layout_gravity="center_vertical"
		        android:layout_marginTop="10dip"
		        android:gravity="center"
		        android:orientation="vertical"
		        android:padding="5dip" >
			        <LinearLayout
			            android:id="@+id/box_steps_weekly"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_margin="5dip"
			            android:layout_weight="1"
			            android:gravity="center"
			            android:orientation="horizontal"
			            android:padding="5dip" >
						<LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginRight="5dip"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:orientation="vertical"
			                 >
				            <TextView
				                android:id="@+id/dashboard_step_count"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/circle_background"
				                android:gravity="center"
				                android:textSize="25sp"
				                android:text="@string/dashboard_step_count"
				                android:textColor="#FFFFFF"
				                />
				
				            <TextView
				                android:id="@+id/dashboard_step_unit"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:text="@string/steps"
				                android:textColor="#FFFFFF"
				                android:textSize="20sp" />
				            </LinearLayout>
				            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginRight="5dip"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:orientation="vertical"
			                 >
				            <TextView
				                android:id="@+id/dashboard_hr_count"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:background="@drawable/circle_background"
				                android:gravity="center"
				                android:textSize="25sp"
				                android:text="@string/dashboard_step_count"
				                android:textColor="#FFFFFF"
				                />
				
				            <TextView
				                android:id="@+id/dashboard_hr_unit"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:text="Bpm"
				                android:textColor="#FFFFFF"
				                android:textSize="20sp" />
				            </LinearLayout>
			        </LinearLayout>
			
			        <LinearLayout
			            android:id="@+id/box_speed_calories"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_margin="5dip"
			            android:layout_weight="1"
			            android:baselineAligned="false"
			            android:orientation="horizontal" >
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginRight="5dip"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:orientation="vertical"
			                 >
			
			                <TextView
			                    android:id="@+id/speed_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="@string/dashboard_step_count"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/speed_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="cm/s"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="5dip"
			                android:layout_weight="1"
			                
			                android:orientation="vertical"
			                android:gravity="center" >
			
			                <TextView
			                    android:id="@+id/calories_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="@string/dashboard_step_count"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/calories_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="@string/calories_burned"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </LinearLayout>
			        
			        <LinearLayout
			            android:id="@+id/pace_and_distance"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_margin="5dip"
			            android:layout_weight="1"
			            android:baselineAligned="false"
			            android:orientation="horizontal" >
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginRight="5dip"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:orientation="vertical"
			                 >
			
			                <TextView
			                    android:id="@+id/distance_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="@string/dashboard_step_count"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/distance_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="Km"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="5dip"
			                android:layout_weight="1"
			                
			                android:orientation="vertical"
			                android:gravity="center" >
			
			                <TextView
			                    android:id="@+id/pace_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="@string/dashboard_step_count"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/pace_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="ms/m"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </LinearLayout>
			        
			        
			        <LinearLayout
			            android:id="@+id/temperature_and_uv"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_margin="5dip"
			            android:layout_weight="1"
			            android:baselineAligned="false"
			            android:orientation="horizontal" >
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginRight="5dip"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:orientation="vertical"
			                 >
			
			                <TextView
			                    android:id="@+id/temerature_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="@string/dashboard_step_count"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/temperature_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="Celcius"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:layout_marginLeft="5dip"
			                android:layout_weight="1"
			                android:orientation="vertical"
			                android:gravity="center" >
			
			                <TextView
			                    android:id="@+id/uv_value"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/circle_background"
			                    android:gravity="center"
			                    android:text="NONE"
			                    android:textColor="#FFFFFF"
			                    android:textSize="25sp" />
			
			                <TextView
			                    android:id="@+id/uv_units"
			                    android:layout_width="wrap_content"
			                    android:layout_height="match_parent"
			                    android:gravity="center_vertical"
			                    android:text="UV Level"
			                    android:textColor="#FFFFFF"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </LinearLayout>
		    </LinearLayout>
		    <View
		    	android:layout_below="@id/dashboard_rl1"   
	    		android:id="@+id/firstDivider"
        		android:layout_height="60dp"
        		android:layout_width="fill_parent"
        		android:background="#2c3e50"
         		/>		    
		</RelativeLayout>
	</ScrollView>
	<RelativeLayout
		android:id="@+id/dashboard_rl2"
		android:layout_width="match_parent"
		android:layout_height="60dip"
		android:layout_alignParentBottom="true" >
		<Button
			android:id="@+id/stopandstart"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="2dip"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:background="#d04545"
			android:text="Stop Counting" 
			android:textColor="#fff"
	        />        
	</RelativeLayout>
</RelativeLayout>		